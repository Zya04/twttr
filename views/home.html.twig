{% extends 'layout.html.twig' %}
{% use 'header.html.twig' %}

{% block page_title %}Twttr -- Profile{% endblock %}

{% block header_title %} {{ user['username'] }} {% endblock %}

{% block content %}
    <form action="?action=home" method="POST">
        <textarea name="message" class="message" cols="10" rows="3" placeholder="send a message..."></textarea><br>
        <button type="submit" name="tweetBtn">twtt</button>
    </form>

    <div>
        {% for tweet in messages %}
            <p><span class="username"><i>[ {{ tweet['creation']}} ] {{ tweet['username'] }} SAID: </i></span>{{ tweet['message'] }} </p>
        {% endfor %}
    </div>
{% endblock %}
